{
  "name": "VidBuild",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build-dev": "ng build --environment=dev --aot",
    "build-qa": "ng build --environment=qa --aot",
    "build-prod": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "sw": "sw-precache --root=dist --config=sw-precache-config.js",
    "deploy-prod": "firebase use prod && npm run build-prod && npm run sw && firebase deploy --only hosting",
    "deploy-qa": "firebase use qa && npm run build-qa && npm run sw && firebase deploy --only hosting",
    "deploy-dev": "firebase use dev && npm run build-dev && npm run sw && firebase deploy --only hosting",
    "static-serve": "npm run build && npm run sw && cd dist && live-server --port=4200 --host=localhost --entry-file=/index.html"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.4.4",
    "@angular/cdk": "^2.0.0-beta.8",
    "@angular/common": "^4.4.4",
    "@angular/compiler": "^4.4.4",
    "@angular/compiler-cli": "^4.4.4",
    "@angular/core": "^4.4.4",
    "@angular/forms": "^4.4.4",
    "@angular/http": "^4.4.4",
    "@angular/material": "^2.0.0-beta.8",
    "@angular/platform-browser": "^4.4.4",
    "@angular/platform-browser-dynamic": "^4.4.4",
    "@angular/platform-server": "^4.4.4",
    "@angular/router": "^4.4.4",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-beta.5",
    "@ngrx/effects": "^4.0.5",
    "@ngrx/router-store": "^4.0.4",
    "@ngrx/store": "^4.0.3",
    "@ngrx/store-devtools": "^4.0.0",
    "angular-animation-lib": "^1.0.0",
    "angularfire": "^2.3.0",
    "angularfire2": "^5.0.0-rc.0",
    "angularfire2-offline": "^4.3.1",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "firebase": "^4.5.0",
    "flexboxgrid": "^6.3.1",
    "glyphicons": "^0.2.0",
    "hammerjs": "^2.0.8",
    "json-stringify-safe": "5.0.1",
    "jszip": "^3.1.4",
    "ngx-bootstrap": "^1.9.3",
    "node-sass": "^4.5.3",
    "push.js": "^1.0.5",
    "rxjs": "^5.4.2",
    "typescript": "^2.5.3",
    "uuid": "^3.1.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.3.2",
    "@angular/compiler-cli": "^4.2.4",
    "@angular/language-service": "^4.2.4",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.1.1",
    "firebase-server": "^0.11.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "sw-precache": "^5.2.0",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
