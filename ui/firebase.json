{
  "database": {
      "rules": "database.rules.json"
  },
  "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
  },
  "hosting": {
      "public": "dist",
      "ignore": [
          "firebase.json",
          "**/.*",
          "**/node_modules/**"
      ],
      "rewrites": [
          {
              "source": "**",
              "destination": "/index.html"
          }
      ],
      "headers": [
          {
              "source": "bundle.js",
              "headers": [
                  {
                      "key": "Access-Control-Allow-Origin",
                      "value": "*"
                  }
              ]
          }
      ]
  }
}